#include <cs50.h>
#include <stdio.h>

int main(void)
{	
    int k=2;
    int n=27;
    	
    while(n>23 || n<0){
		printf("Height: ");
        n=GetInt();
    }
   
    for(int i=0;i<n;i++){
    	
        for(int j=0;j<n+1;j++){
            if(j+k>n){
                printf("#");
            }
            else{
				 printf(" ");
            }
    }
        printf("\n");
        k++;
    }
}

